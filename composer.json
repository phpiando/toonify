{
    "name": "phpiando/toonify",
    "description": "A PHP library to convert between JSON and TOON format for optimized LLM data exchange.",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": [
        "toon",
        "json",
        "llm",
        "token-optimization",
        "serialization",
        "ai"
    ],
    "authors": [
        {
            "name": "Roni Sommerfeld",
            "email": "roni@phpiando.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Toonify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Toonify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix src/",
        "analyse": "phpstan analyse src/ --level=8"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
